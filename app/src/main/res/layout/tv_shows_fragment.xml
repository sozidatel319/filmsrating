<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="ru.mikhailskiy.intensiv.ui.tvshows.TvShowsFragment">

    <ProgressBar
        android:id="@+id/tvShowProgressBar"
        android:layout_width="@dimen/dimens_20"
        android:layout_height="@dimen/dimens_20"
        android:visibility="gone"
        android:layout_gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tvShowsRecyclerview"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7.3dp"
        android:layout_marginTop="19.3dp"
        android:layout_marginEnd="13.3dp"
        android:orientation="vertical" />

</FrameLayout>