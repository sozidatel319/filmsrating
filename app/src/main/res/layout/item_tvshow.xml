<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tvShowImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_avatar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvShowNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="dasdasffzfzfzfzfzdfzfz" />

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3.6dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="10.4dp"
                android:layout_height="9.9dp"
                android:contentDescription="star1"
                app:srcCompat="@drawable/ic_rate_star_button" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="10.4dp"
                android:layout_height="9.9dp"
                android:contentDescription="star2"
                app:srcCompat="@drawable/ic_rate_star_button" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="10.4dp"
                android:layout_height="9.9dp"
                android:contentDescription="star3"
                app:srcCompat="@drawable/ic_rate_star_button" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="10.4dp"
                android:layout_height="9.9dp"
                android:contentDescription="star4"
                app:srcCompat="@drawable/ic_rate_star_button" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="10.4dp"
                android:layout_height="9.9dp"
                android:contentDescription="star5"
                app:srcCompat="@drawable/ic_rate_star_button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
