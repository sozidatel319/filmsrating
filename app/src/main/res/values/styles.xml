<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>
    
    <style name="filmNameText">
        <item name="android:textSize">@dimen/dimens_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">@dimen/dimens_22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="aboutFilmTitleText">
        <item name="lineHeight">@dimen/dimens_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimens_8.7sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="aboutAnyText">
        <item name="android:textSize">@dimen/dimens_8.7sp</item>
        <item name="lineHeight">@dimen/dimens_12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>
